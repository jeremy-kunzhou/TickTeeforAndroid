<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:orientation="vertical"
    android:layout_width="fill_parent"  android:id="@+id/row_project_list">

    <TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView android:textColor="#000000"
            android:id="@+id/row_project_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="namedd" android:textStyle="bold"
            android:gravity="center_vertical|left"
            android:layout_weight="1"
            android:typeface="monospace"
            android:height="40sp"
            android:textSize="20sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
             />
    </TableRow>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView android:textColor="#000000"
            android:id="@+id/row_project_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_weight="1"
            android:height="20sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp" />

        <TextView
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/row_project_percentage"
            android:layout_weight="1"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:gravity="center"
            android:height="20sp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="end"
            android:id="@+id/row_project_progress"
            android:text="Progress"
            android:height="20sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp" />
    </LinearLayout>

</TableLayout>